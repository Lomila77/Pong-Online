generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  fortytwo_id       Int       @id @unique
  fortytwo_picture  String?
  fortytwo_userName String    @unique
  fortytwo_email    String    @unique
  pseudo            String    @default("0") @db.VarChar(20)
  refresh_token     String    @default("0")
  avatar            String    @default("0")
  isF2Active        Boolean   @default(false)
  secretOf2FA       String    @default("0")
  xp                Float     @default(0)
  ratio             Int       @default(0)
  Channel           Channel[]
  createdAt         DateTime  @default(now())
  updateAt          DateTime  @updatedAt

  @@map("users")
}

model Channel {
  owner           Int      @unique
  name            String   @unique
  type            Int
  password        String
  creationDate    DateTime
  user            User     @relation(fields: [userFortytwo_id], references: [fortytwo_id])
  userFortytwo_id Int
}
